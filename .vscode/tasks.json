{
    "version": "0.1.0",
    "tasks": [
        {
            "taskName": "compileAndLaunch",
            "isBackground": true,
            "command": "npm",
            "isShellCommand": true,
            "suppressTaskName": true,
            "args": [
                "start"
            ]
        },
        {
            // View a static web page quickly.
            "taskName": "staticWeb",
            "command": "Chrome",
            "windows": {
                "command": "C:\\Program Files (x86)\\Google\\Chrome\\Application\\chrome.exe"
            },
            "osx": {
                "command": "/Applications/Google Chrome.app/Contents/MacOS/Google Chrome"
            },
            "args": ["${file}"]
        }
    ]
}